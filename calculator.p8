version 43
__lua__
function _init()
-- enable mouse controlls --
	poke(0x5f2d, 1)
	
end

function _update()
	mpos_x = stat(32)
	mpos_y = stat(33)
end

function _draw()
	cls()
	print("result")
	spr(1,mpos_x,mpos_y)
end

-- arithmetic functions --
function calc_add(x,y)
	return x+y
end

function calc_subtract(x,y)
	return x-y
end

function calc_multiply(x,y)
	return x*y
end

function calc_divide(x,y)
	return x/y
end

function calc_modulo(x,y)
	return x%y
end
